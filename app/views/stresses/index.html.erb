<div class="top-index-picture">
  <img src="take-it-easy-55e8d1414e_640.jpg", class="top-index-image">
</div>

<div class="contaier">
  <div class="row">
    <div class="col-lg-4 sidebar">
      <div class="stress-index-picture">
        <img src="photo-1536778215133-7e02ee89cb90.jpeg">
      </div>

<!--サイドバー-->
      <table class="table table-bordered sidebar-table" style="width:70%; margin-left: 60px;">
        <tbody>
          <tr style="text-align: center;">
            <td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class:"profile-picture", fallback: "/smiley-54e9d24a4b_640.jpg" %></td>
          </tr>
          <tr>
            <td>ニックネーム: <%= @user.name %></td>
          </tr>
          <tr>
            <td><%= link_to "自分がフォロー中のUser: #{@user.followings.count}人", user_followings_path(@user) %></td>
          </tr>
          <tr>
            <td><%= link_to "自分をフォロー中のUser: #{@user.followers.count}人", user_followers_path(@user) %></td>
          </tr>
        </tbody>
      </table>
        <div class="user-find">
          <%= link_to "他のユーザーを探す", users_path, class:"user-find" %>
        </div>
<!--カレンダー  -->
      <%= render 'stresses/index', user: @user, event: @event %>
<!--カレンダー  -->
    </div>

     <div class="col-lg-7">
<!--ゲストユーザーと、通常ログインで表示変更-->
       <% if @user == User.guest %>
           <h2 class="past-stress">ゲストさんと、フォローしたユーザーのストレス</h2>
       <% else %>
           <h2 class="past-stress"><%= @user.name %>さんと、フォローしたユーザーのストレス</h2>
       <% end %>
<!--ゲストユーザーと、通常ログインで表示変更-->
       <table class="table table-bordered">
         <thead>
           <tr>
             <th><h4>気持ち</h4></th>
             <th><h4>ユーザー名</h4></th>
             <th><h4>タイトル</h4></th>
             <th><h4>投稿日</h4></th>
             <th></th>
           </tr>
         </thead>
         <% @stresses.each do |stress| %>
         <tbody>
           <tr>
             <td style="width:25%"><%= attachment_image_tag stress, :image, :fill, 30, 30, format: 'jpeg', fallback: "/minimalism-52e8d1454a_640.jpg", size:'150x100' %></td>
             <td><%= stress.user.name %></td>
             <td><%= stress.title %></td>
             <td><%= stress.created_at.to_s(:datetime_jp) %></td>
             <td><%= link_to "詳細", stress_path(stress.id) %></td>
           </tr>
         </tbody>
         <% end %>
       </table>
       <%= paginate @stress %>
     </div>
  </div>
</div>


