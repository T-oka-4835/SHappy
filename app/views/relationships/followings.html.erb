<div class="relation-title">
  <h2>自分がフォロー中のユーザー</h2>
</div>

<% if @users.exists? %>
  <table class="table table-bordered  relation-table" style="width: 35%;">
    <thead>
      <tr>
        <th>写真</th>
        <th>ニックネーム</th>
      </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', class:"profile-picture", fallback: "/smiley-54e9d24a4b_640.jpg" %></td>
        <td><%= link_to user.name, user_path(user) %></td>
      </tr>
    <% end %>
<% else %>
  <div class="no-user">
    <p>自分がフォロー中のユーザーはいません</p>
  </div>
  <div class="no-user-picture">
    <img src="/sayhello.jpeg">
  </div>
<% end %>
    </tbody>
  </table>
<div style="text-align: center;">
  <%= paginate @users %>
</div>