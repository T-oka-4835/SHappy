<% stress.post_comments.each do |post_comment| %>
  <div class="comment">
    <div class="comment-text">
      <div class="comment-author clearfix">
        <a href="#" class="link-author"><%= post_comment.user.name %></a>
        <span class="comment-date"><%= post_comment.created_at.strftime('%Y/%m/%d') %></span>
      </div>
      <div style="margin-bottom:10px;">
        <%= post_comment.comment %>
        <% if post_comment.user == current_user %>
          <div>
            <%= link_to "削除", stress_post_comment_path(post_comment.stress, post_comment), method: :delete, class: "btn btn-danger", remote: true %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<%= form_with model:[stress, post_comment] do |f| %>
  <%= f.text_area :comment, class: "comment-form",placeholder: "コメントをここに" %>
  <%= f.submit "送信する", class: "comment-submit btn" %>
<% end %>
